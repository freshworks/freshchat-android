<resources>

    <style name="Widget" />

    <style name="Widget.Freshchat" />

    <style name="TextAppearance.Freshchat" parent="TextAppearance.AppCompat"></style>

    <style name="TextAppearance.Freshchat.Small" parent="TextAppearance.AppCompat.Small"></style>

    <style name="TextAppearance.Freshchat.Medium" parent="TextAppearance.AppCompat.Medium"></style>

    <style name="TextAppearance.Freshchat.Large" parent="TextAppearance.AppCompat.Large"></style>

    <!-- Message Styling & Customizations -->

    <style name="Widget.Freshchat.MessageList">
        <item name="android:background">@drawable/freshchat_message_list_bg</item>
        <item name="android:divider">@color/freshchat_message_list_divider</item>
        <item name="android:dividerHeight">@dimen/freshchat_message_lisitem_divider_height</item>
        <item name="android:stackFromBottom">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:transcriptMode">alwaysScroll</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="Widget.Freshchat.MessageListItem">
        <item name="android:background">@color/freshchat_message_list_item_bg</item>
    </style>

    <style name="Widget.Freshchat.MessageButton" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/freshchat_chat_deeplink</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">@dimen/freshchat_message_button_min_width</item>
        <item name="android:textDirection">firstStrong</item>
    </style>

    <style name="Widget.Freshchat.MessageReplyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:hint">@string/freshchat_chat_message_composer_hint</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:maxLines">4</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/freshchat_message_reply_text</item>
        <item name="android:textColorHint">@color/freshchat_message_reply_hint_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Freshchat.MessageReplyView">
        <item name="android:background">@color/freshchat_message_reply_view_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/freshchat_message_reply_frame_min_height</item>
    </style>

    <style name="Widget.Freshchat.TeamMemberName">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Small</item>
        <item name="android:textColor">@color/freshchat_text_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:text">@string/freshchat_default_agent_name</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Freshchat.TeamMemberAvatarView">
        <item name="android:layout_height">@dimen/freshchat_message_avatar_icon_size</item>
        <item name="android:layout_width">@dimen/freshchat_message_avatar_icon_size</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <!-- This style doesn't support anything except text appearance attributes -->
    <style name="Widget.Freshchat.UserMessage">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:textColor">@color/freshchat_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- This style doesn't support anything except text appearance attributes -->
    <style name="Widget.Freshchat.TeamMemberMessage">
