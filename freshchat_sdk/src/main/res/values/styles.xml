        <item name="android:textSize">16sp</item>
    </style>

    <!-- This style doesn't support anything except text appearance attributes -->
    <style name="Widget.Freshchat.UserMessageTime">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Small</item>
        <item name="android:textColor">@color/freshchat_text_color</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- This style doesn't support anything except text appearance attributes -->
    <style name="Widget.Freshchat.TeamMemberMessageTime">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Small</item>
        <item name="android:textColor">@color/freshchat_text_color</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Widget.Freshchat.VoiceMessageDuration">
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Small</item>
        <item name="android:textColor">@color/freshchat_text_color</item>
        <item name="android:textDirection">firstStrong</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Freshchat.ConversationBannerMessage">
        <item name="android:background">@color/freshchat_contact_us_btn_bg_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshchat.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textDirection">firstStrong</item>
    </style>

    <!-- Chat Resolution Widget Styles -->

    <style name="Widget.Freshchat.ChatResolutionPromptView">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.Freshchat.ChatResolutionPromptText">
        <item name="android:ellipsize">end</item>
