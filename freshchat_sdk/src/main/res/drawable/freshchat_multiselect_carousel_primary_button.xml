<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/freshchat_carousel_card_stroke_width" android:color="@color/freshchat_carousel_card_button_color" />
            <solid android:color="@color/freshchat_primary_text_color_six_percent_opacity" />
            <corners android:radius="@dimen/freshchat_carousel_button_radius" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/freshchat_carousel_card_stroke_width" android:color="@color/freshchat_grey_light" />
            <corners android:radius="@dimen/freshchat_carousel_button_radius" />
            <solid android:color="@color/freshchat_grey_light" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="@dimen/freshchat_carousel_card_stroke_width" android:color="@color/freshchat_carousel_card_button_color" />
            <solid android:color="@color/freshchat_carousel_view_button_color" />
            <corners android:radius="@dimen/freshchat_carousel_button_radius" />
        </shape>
    </item>
</selector>
