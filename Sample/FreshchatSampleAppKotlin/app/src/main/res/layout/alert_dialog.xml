<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/activity_configuration"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/top_left_pane"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <EditText
                    android:id="@+id/input_faq_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    style="@style/InputBoxStyle"
                    android:hint="FAQ Tags" />

                <EditText
                    android:id="@+id/input_faq__title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    style="@style/InputBoxStyle"
                    android:hint="FAQ Title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FilterType:" />

                <RadioGroup
                    android:id="@+id/radio_filter_type"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/radioFilterTypeArticleLeft">

                    <RadioButton
                        android:id="@+id/radioFilterTypeArticleLeft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Article" />

                    <RadioButton
                        android:id="@+id/radioFilterTypeCategoryLeft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category" />
                </RadioGroup>

                <EditText
                    android:id="@+id/input_contact_us_tags"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    style="@style/InputBoxStyle"
                    android:hint="Contact Us Tags" />

                <EditText
                    android:id="@+id/input_contact_us_title"
                    style="@style/InputBoxStyle"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"

                    android:layout_height="wrap_content"
                    android:hint="Contact Us Title" />

                <CheckBox
                    android:id="@+id/check_box_show_contactus_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginBottom="10dp"
                    android:text="Show Contact Us" />

                <Button
                    android:layout_marginTop="16dp"
                    android:id="@+id/alert_btn_launch_with_faq_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    style="@style/dialogButtonStyle"
                    android:text="Launch FAQ (FAQ Options)" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>